<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff5f3f4"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/base_tabactivityitem1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="奖励"
            android:textColor="@color/base_titlebar_bg"
            android:textSize="@dimen/text_m" />

        <TextView
            android:id="@+id/base_tabactivityitem2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="惩罚"
            android:textColor="@color/black"
            android:textSize="@dimen/text_m" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/base_tabactivityline_1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/base_titlebar_bg" />

        <TextView
            android:id="@+id/base_tabactivityline_2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/base_titlebar_bg"
            android:visibility="invisible" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" >
        <com.base.widget.RTPullListView
            android:id="@+id/base_tabactivitylv_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <com.base.widget.RTPullListView
            android:id="@+id/base_tabactivitylv_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>